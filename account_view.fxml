<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.ColumnConstraints?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" styleClass="bg">
    <top>
        <HBox spacing="12" styleClass="app-header">
            <Label text="Fairgrounds Banking" styleClass="brand" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="Customer:" styleClass="muted" />
            <Label fx:id="customerLabel" styleClass="bold" />
            <Button fx:id="logoutButton" text="Logout" styleClass="btn" />
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.45">
            <VBox spacing="12" styleClass="card">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12" />
                </padding>
                <Label text="Your Accounts" styleClass="card-title" />
                <ListView fx:id="accountsList" prefHeight="320.0" />
                <HBox spacing="8">
                    <TextField fx:id="amountField" promptText="Amount" />
                    <Button fx:id="depositBtn" text="Deposit" styleClass="btn-primary" />
                    <Button fx:id="withdrawBtn" text="Withdraw" styleClass="btn-warn" />
                    <Button fx:id="interestBtn" text="Pay Interest" styleClass="btn" />
                </HBox>
            </VBox>
            <VBox spacing="12" styleClass="card accent">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12" />
                </padding>
                <Label text="Open New Account" styleClass="card-title" />
                <GridPane hgap="12" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" />
                        <ColumnConstraints percentWidth="60" />
                    </columnConstraints>

                    <Label text="Account Type:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <ComboBox fx:id="openTypeCombo" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Classification:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <ComboBox fx:id="classificationCombo" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Business Name:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="businessNameField" promptText="Required for BUSINESS" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Initial Deposit:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <TextField fx:id="initialDepositField" promptText="0.00" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Employer (Cheque):" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <TextField fx:id="employerNameField" promptText="Employer name" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                    <Label text="Employer Address (Cheque):" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                    <TextField fx:id="employerAddressField" promptText="Employer address" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                </GridPane>
                <Button fx:id="openAccountBtn" text="Open Account" styleClass="btn-primary" />
            </VBox>
        </SplitPane>
    </center>
    <bottom>
        <HBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label fx:id="errorLabel" textFill="red" />
        </HBox>
    </bottom>
</BorderPane>
