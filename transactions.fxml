<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="banking.TransactionController">
   <top>
      <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #2c3e50;">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         <children>
            <Label text="Transaction History" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="accountInfoLabel" text="Account Information" textFill="#ecf0f1">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ecf0f1;">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 2);">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Transaction History" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <ScrollPane fx:id="transactionScrollPane" fitToWidth="true" maxHeight="300.0" prefHeight="300.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5;">
                     <content>
                        <VBox fx:id="transactionContainer" spacing="5.0">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-background-radius: 5; -fx-text-fill: white; -fx-padding: 8;">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <text>Refresh</text>
                        </Button>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #95a5a6; -fx-background-radius: 5; -fx-text-fill: white; -fx-padding: 8;">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <text>Back to Menu</text>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e;">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         <children>
            <Label fx:id="statusLabel" text="Transaction history loaded" textFill="#bdc3c7">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
